    <EditText
        android:id="@+id/search_max_price"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Max Price"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/search_min_price"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextProvince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/province"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextcity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/search_min_price"
        app:layout_constraintTop_toBottomOf="@+id/search_min_price" />

    <EditText
        android:id="@+id/editTextcity"
        android:layout_width="0dp"
