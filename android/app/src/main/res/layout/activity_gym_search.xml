        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/AddressDialog"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextProvince" />

    <EditText
        android:id="@+id/editTextSearchNameGym"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/gymTitleDialog"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextSearchAddressGym"
        app:layout_constraintStart_toStartOf="@+id/editTextSearchAddressGym"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchAddressGym" />

